<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<contextName>testAppName</contextName>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned by default the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{MM:dd HH:mm:ss.SSS} [%thread] - %msg%n</pattern>
			<!-- <pattern>%d{MM:dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}\t- %msg%n</pattern> -->
		</encoder>
	</appender>
	
	<logger name="com.cm4j.taobao">
		<level value="debug" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.springframework">
		<level value="error" />
		<appender-ref ref="STDOUT" />
	</logger>
	<logger name="org.jboss.netty">
		<level value="debug" />
		<appender-ref ref="STDOUT" />
	</logger>
	
	<root>
		<level value="error" />
	</root>
</configuration>